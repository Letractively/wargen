<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.wargen"
    android:versionCode="1"
    android:versionName="1.0" >

    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
        
    
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.wargen.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.wargen.MensagemFazendoLogin"
            android:parentActivityName="br.com.wargen.activity.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.wargen.Principal" />
        </activity>
        <activity
            android:name="br.com.wargen.activity.PrincipalActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_principal"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="br.com.wargen.activity.ConfiguracaoServidorActivity"
            android:label="@string/title_activity_configuracao_servidor"
            android:parentActivityName="br.com.wargen.activity.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.wargen.activity.LoginActivity" />
        </activity>
    </application>

</manifest>