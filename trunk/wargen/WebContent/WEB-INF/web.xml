<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<welcome-file-list>
		<welcome-file>Index.jsp</welcome-file>
	</welcome-file-list>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
	<!-- SERVLETS -->
	
		<!-- LOGIN -->
		<servlet>
			<servlet-name>LoginServlet</servlet-name>
			<servlet-class>br.unic.ra.gerador.servlet.LoginServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>LoginServlet</servlet-name>
			<url-pattern>/EfetuarLogin</url-pattern>
		</servlet-mapping>
		
		<!-- LOGOUT -->
		<servlet>
			<servlet-name>LogoutServlet</servlet-name>
			<servlet-class>br.unic.ra.gerador.servlet.LogoutServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>LogoutServlet</servlet-name>
			<url-pattern>/EfetuarLogout</url-pattern>
		</servlet-mapping>
	
		<!-- ARQUIVO -->
		<servlet>
			<servlet-name>FormArquivoServlet</servlet-name>
			<servlet-class>br.unic.ra.gerador.servlet.arquivo.FormArquivoServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>FormArquivoServlet</servlet-name>
			<url-pattern>/arquivo/FormArquivo</url-pattern>
		</servlet-mapping>
		<servlet>
			<servlet-name>FormUploadArquivoServlet</servlet-name>
			<servlet-class>br.unic.ra.gerador.servlet.arquivo.FormUploadArquivoServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>FormUploadArquivoServlet</servlet-name>
			<url-pattern>/arquivo/FormUploadArquivo</url-pattern>
		</servlet-mapping>	
</web-app>
