<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<welcome-file-list>
		<welcome-file>Index.jsp</welcome-file>
	</welcome-file-list>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
	<!-- SERVLETS -->
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>br.unic.ra.gerador.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>br.unic.ra.gerador.servlet.LogoutServlet</servlet-class>
	</servlet>
	
	<!-- SERVLET MAPPINGS -->
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/EfetuarLogin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/EfetuarLogout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FormPatrimonio</servlet-name>
		<url-pattern>/patrimonio/FormPatrimonio</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListPatrimonio</servlet-name>
		<url-pattern>/patrimonio/ListPatrimonio</url-pattern>
	</servlet-mapping>
	
</web-app>
